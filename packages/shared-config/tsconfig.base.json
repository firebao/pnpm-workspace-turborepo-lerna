{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "lib": ["es6", "esnext", "dom"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": true,
    "noEmit": false,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
